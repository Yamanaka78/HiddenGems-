<div class="js-rvw-content-clickable-area bg-white rounded-lg p-6 shadow-lg mb-6">
  <div class="flex items-center mb-4">
    <a href="/rvwr/002370568/" target="_blank" rel="noopener">
      <img class="w-10 h-10 rounded-full" src="https://tblg.k-img.com/user/images/Profile/2370/70x70_2370568.jpg?1722513070" alt="春薫">
    </a>
    <div class="ml-3">
      <a href="/rvwr/<%= review.user.id %>/" class="text-sm font-medium text-gray-900 hover:underline" target="_blank" rel="noopener"><%= review.user.name %></a>
      <p class="text-sm text-gray-500"><%= review.created_at.strftime("%Y年%m月%d日") %></p>
    </div>
  </div>

  <div class="text-sm text-gray-700 mb-4">
    <%= simple_format(review.review_content) %>
  </div>

  <!-- 添付された画像を動的に表示 -->
  <div class="flex space-x-2 overflow-x-auto mb-4">
    <% review.images.each do |image| %>
      <a href="<%= url_for(image) %>" class="w-24 h-24 flex-shrink-0" target="_blank" rel="noopener">
        <%= image_tag image, class: "w-full h-full object-cover rounded-lg" %>
      </a>
    <% end %>
  </div>

  <p class="text-sm mt-4 text-blue-600">
    <a href="/hokkaido/A0110/A011001/1046145/dtlrvwlst/B481032029/?use_type=0&amp;smp=1" class="hover:underline">口コミを最後まで見る</a>
  </p>
</div>
