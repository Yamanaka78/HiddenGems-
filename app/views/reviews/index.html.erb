<div class="w-1/2 mx-auto bg-white p-8">
  <!-- 上部タイトル -->
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold"><%= @spot.title %></h1>
  </div>

  <!-- 画像ギャラリー -->
  <%= render partial: "spots/image_gallery", locals: { spot: @spot } %>

  <!-- タグボタン -->
  <%= render partial: "spots/spot_tags", locals: { spot: @spot } %>

  <!-- タブナビゲーション -->
  <%= render partial: "spots/tab_navigation", locals: { spot: @spot, reviews_count: @reviews_count } %>

  <!-- 口コミ一覧 -->
  <%= render partial: "reviews/review_list", locals: { reviews: @reviews, spot: @spot } %>
</div>
