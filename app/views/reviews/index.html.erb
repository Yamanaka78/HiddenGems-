<div class="w-1/2 mx-auto bg-white p-8">
  <!-- 上部タイトル -->
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold"><%= @spot.title %></h1>
  </div>

  <!-- 画像ギャラリー -->
  <%= render partial: "spots/image_gallery", locals: { spot: @spot } %>

  <!-- タグボタン -->
  <div class="mb-6 flex space-x-4">
    <%= render partial: "spots/spot_tags", locals: { spot: @spot } %>
  </div>

  <!-- タブナビゲーション -->
  <div class="border-b border-gray-200 mb-6">
    <nav class="-mb-px flex space-x-8" aria-label="Tabs">
      <%= link_to t('spots.show.detail_tab'), spot_path(@spot), class: "text-gray-500 whitespace-nowrap py-4 px-1 border-b-2 border-transparent font-medium text-sm" %>
      <%= link_to t('spots.show.review_tab', count: @reviews_count), spot_reviews_path(@spot), class: "text-gray-900 whitespace-nowrap py-4 px-1 border-b-2 border-yellow-500 font-medium text-sm" %>
      <%= link_to t('spots.show.map_tab'), "#", class: "text-gray-500 whitespace-nowrap py-4 px-1 border-b-2 border-transparent font-medium text-sm" %>
    </nav>
  </div>

  <!-- 口コミ一覧 -->
  <div class="bg-white shadow rounded-lg p-6 mb-6">
    <%= render @reviews %>
    <!-- 口コミを投稿するボタン -->
    <div class="border-t border-gray-200 pt-4">
      <%= link_to t('spots.show.post_review'), new_spot_review_path(@spot), class: "w-full bg-yellow-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-yellow-600" %>
    </div>
  </div>
</div>
