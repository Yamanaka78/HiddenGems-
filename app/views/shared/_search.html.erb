<div class="search mt-6 flex justify-center">
  <%= search_form_for @q, url: url, method: :get, class: "w-full max-w-lg" do |f| %>
    <div class="search-input flex w-full">
      <div class="flex-grow relative">
        <span class="absolute left-2 top-3">
          <svg viewBox="0 0 30 30" class="w-6 h-6">
            <use xlink:href="/images/common/svg/icon.svg#icon_search"></use>
          </svg>
        </span>
        <%= f.search_field :spot_cont,
              class: "input input-bordered w-full h-12 pl-10",
              placeholder: "スポット名で検索",
              aria: { label: "スポット名で検索" } %>
      </div>
      <%= f.submit '検索', class: "btn btn-primary h-12 ml-2 px-6" %>
    </div>
  <% end %>
</div>
