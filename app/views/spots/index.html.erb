<div class="flex min-h-screen">

  <!-- サイドバー 検索機能時に修正予定-->
  <aside class="w-1/5 bg-white p-6 border-r border-gray-200">
    <h2 class="text-xl font-bold mb-4">検索フィルター</h2>

    <div class="mb-6">
      <h3 class="font-semibold mb-2">エリアから探す</h3>
      <select class="w-full border border-gray-300 rounded p-2">
        <option>東京ディズニーランド</option>
        <option>東京ディズニーシー</option>
      </select>
    </div>

    <div class="mb-6">
      <h3 class="font-semibold mb-2">カテゴリーから探す</h3>
      <ul class="space-y-2">
        <li>
          <input type="checkbox" id="rides">
          <label for="rides">アトラクション</label>
        </li>
        <li>
          <input type="checkbox" id="restaurants">
          <label for="restaurants">レストラン</label>
        </li>
        <li>
          <input type="checkbox" id="shows">
          <label for="shows">ショー</label>
        </li>
      </ul>
    </div>
  </aside>

  <!-- メインコンテンツ -->
  <main class="flex-1 p-8">
    <div class="flex items-center justify-between border-b border-gray-300 pb-2 mb-6">
      <h2 class="text-2xl font-bold text-gray-700">スポット</h2>
      <div class="flex space-x-4">
        <button class="text-blue-500 border-b-2 border-blue-500 pb-1">人気順</button>
        <button class="text-gray-500 hover:text-blue-500">おすすめ順</button>
        <button class="text-gray-500 hover:text-blue-500">最新順</button>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-1 lg:grid-cols-2 gap-6">
      <% if @spots.present? %>
        <%= render @spots %>
      <% else %>
        <div class="mb-3">スポットがありません</div>
      <% end %>
    </div>
  </main>

</div>
