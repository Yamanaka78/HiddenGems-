<div class="bg-white rounded-lg shadow-md p-6 flex mb-6">
<div class="grid grid-cols-3 grid-rows-2 gap-2 h-64">
  <% if spot.images.attached? %>
    <!-- 1枚目の画像（大きく表示） -->
    <div class="col-span-2 row-span-2">
      <%= image_tag spot.images[0],
                    class: "w-full h-full object-cover rounded-lg",
                    alt: spot.title %>
    </div>

    <!-- 2枚目以降の画像（小さく表示、2枚まで） -->
    <% spot.images[1..2].each do |image| %>
      <div class="relative w-full h-full">
        <%= image_tag image,
                      class: "w-full h-full object-cover rounded-lg",
                      alt: spot.title %>
      </div>
    <% end %>
  <% else %>
    <!-- プレースホルダー -->
    <div class="col-span-3 row-span-2">
      <%= image_tag "placeholder.png",
                    class: "w-full h-full object-cover rounded-lg",
                    alt: "No Image" %>
    </div>
  <% end %>
</div>


  <div class="w-1/2 pl-6 flex flex-col justify-between">
    <div>
      <h3 class="text-2xl font-bold mb-4"><%= spot.title %></h3>
      <p class="text-gray-600 mb-2">スポット: <%= spot.spot %></p>
      <p class="text-gray-700 mb-6"><%= spot.description %></p>
    </div>
    <div class="mt-6">
      <button class="bg-blue-500 text-white py-3 px-5 rounded hover:bg-blue-600">詳細を見る</button>
    </div>
  </div>
</div>
