<div class="container mx-auto px-4 py-6">
  <div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-lg">
    <h1 class="text-2xl font-bold mb-6">会員登録</h1>

    <%= form_with model: @user, local: true do |f| %>
      <!-- ニックネーム -->
      <div class="mb-3">
        <%= f.label :name, "ニックネーム", class: "form-label block text-sm font-medium text-gray-700" %>
        <%= f.text_field :name, class: "form-control input input-bordered w-full mt-2", required: true %>
      </div>

      <!-- メールアドレス -->
      <div class="mb-3">
        <%= f.label :email, "メールアドレス", class: "form-label block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, class: "form-control input input-bordered w-full mt-2", required: true %>
      </div>

      <!-- パスワード -->
      <div class="mb-3">
        <%= f.label :password, "パスワード", class: "form-label block text-sm font-medium text-gray-700" %>
        <div class="relative">
          <%= f.password_field :password, class: "form-control input input-bordered w-full mt-2", required: true, pattern: "^([!-~]{8,})+$" %>
        </div>
      </div>

      <!-- パスワード確認 -->
      <div class="mb-3">
        <%= f.label :password_confirmation, "パスワード確認", class: "form-label block text-sm font-medium text-gray-700" %>
        <div class="relative">
          <%= f.password_field :password_confirmation, class: "form-control input input-bordered w-full mt-2", required: true %>
        </div>
      </div>

      <!-- 登録ボタン -->
      <div class="mb-3">
        <%= f.submit "メールアドレスで登録する", class: "btn btn-primary w-full font-bold" %>
      </div>
    <% end %>
  </div>
</div>
