<div id="section-2" class="max-w-sm mx-auto hidden">
     <!-- 公開設定 -->
    <div class="mb-4">
        <span class="block text-gray-700 font-semibold mb-2">公開設定</span>
        <div class="flex items-center mb-2">
          <%= f.radio_button :public, true, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300" %>
          <%= f.label :public, "全体に公開", class: "ml-2 text-gray-700" %>
        </div>
        <div class="flex items-center">
          <%= f.radio_button :public, false, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300" %>
          <%= f.label :public, "非公開", class: "ml-2 text-gray-700" %>
        </div>
  </div>
  <div class="mb-4">
    <%= f.label :start_date, "出発日", class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.date_field :start_date, required: true, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
  </div>
  <div class="mb-4">
    <%= f.label :end_date, "最終日", class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.date_field :end_date, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
  </div>
      <!-- 予算設定 -->
      <div class="mb-4">
        <%= f.label :budget, "予算（円）", class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.number_field :budget, min: 0, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
      </div>

      <!-- プランのカテゴリ -->
      <div class="mb-4">
        <%= f.select :category, Plan.categories.keys.map { |key| [key.humanize, key] }, { include_blank: "選択してください" }, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
      </div>

      <!-- 参加人数 -->
      <div class="mb-4">
        <%= f.label :number_of_people, "参加人数", class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.number_field :number_of_people, min: 1, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
      </div>

      <!-- 天候予報リンク -->
      <div class="mb-4">
        <%= f.label :weather_link, "天候予報リンク", class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.url_field :weather_link, placeholder: "天候予報リンクを入力してください", class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
      </div>

  <button type="button" class="prev-step bg-gray-300 px-4 py-2 rounded">戻る</button>
  <button type="button" class="next-step bg-blue-500 text-white px-4 py-2 rounded">次へ</button>
</div>
