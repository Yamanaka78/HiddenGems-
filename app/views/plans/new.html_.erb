<div class="flex justify-center items-center min-h-screen bg-gray-100">
  <div class="bg-white p-8 rounded-lg shadow-lg max-w-lg w-full">
    <!-- ステップナビゲーション -->
    <div class="steps flex justify-between mb-6">
      <div class="step active" id="step-1">1. 基本情報</div>
      <div class="step" id="step-2">2. 旅行詳細</div>
      <div class="step" id="step-3">3. スポット選択</div>
      <div class="step" id="step-4">4. オプション設定</div>
    </div>

    <%= form_with model: @plan, local: true, id: "plan-form" do |f| %>
      <!-- セクションを動的に挿入 -->
      <%= render partial: "plans/section_1", locals: { f: f } %>
      <%= render partial: "plans/section_2", locals: { f: f } %>
      <%= render partial: "plans/section_3", locals: { f: f, wishlist_spots: @wishlist_spots } %>
      <%= render partial: "plans/section_4", locals: { f: f } %>
    <% end %>
  </div>
</div>
