<div class="flex justify-center items-center min-h-screen bg-gray-100">
  <div class="bg-white p-8 rounded-lg shadow-lg max-w-lg w-full">
    <h1 class="text-2xl font-bold mb-6 text-center">新しいプランを作成</h1>

    <%= form_with model: @plan, local: true do |f| %>
      <div class="mb-4">
        <%= f.label :plan_name, "プラン名", class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.text_field :plan_name, required: true, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
      </div>

      <div class="mb-4">
        <%= f.label :description, "説明", class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.text_area :description, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
      </div>

      <!-- 公開設定 -->
      <div class="mb-4">
        <span class="block text-gray-700 font-semibold mb-2">公開設定</span>
        <div class="flex items-center mb-2">
          <%= f.radio_button :public, true, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300" %>
          <%= f.label :public, "全体に公開", class: "ml-2 text-gray-700" %>
        </div>
        <div class="flex items-center">
          <%= f.radio_button :public, false, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300" %>
          <%= f.label :public, "非公開", class: "ml-2 text-gray-700" %>
        </div>
      </div>

      <h2 class="text-xl font-semibold mb-4 text-center">行きたいリストからスポットを選択</h2>
      <div class="space-y-4 mb-6">
        <% @wishlist_spots.each do |spot| %>
          <div class="border border-gray-200 rounded p-4">
            <div class="flex items-center mb-2">
              <%= check_box_tag "plan[spot_ids][]", spot.id, false, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
              <%= label_tag "plan[spot_ids][]", spot.title, class: "ml-2 text-gray-700 font-medium" %>
            </div>
            <div class="ml-6 space-y-3">
              <div>
                <label class="block text-gray-700 text-sm mb-1">順番</label>
                <%= number_field_tag "plan[order][#{spot.id}]", nil, min: 1, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
              </div>

              <div>
                <label class="block text-gray-700 text-sm mb-1">移動時間</label>
                <%= time_field_tag "plan[visit_times][#{spot.id}]", nil, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
              </div>

              <div>
                <label class="block text-gray-700 text-sm mb-1">移動手段</label>
                <%= text_field_tag "plan[transport_methods][#{spot.id}]", nil, placeholder: "徒歩, 車, 電車 など", class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <%= f.submit "プランを作成", class: "w-full bg-blue-500 text-white font-semibold px-4 py-2 rounded hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    <% end %>
  </div>
</div>
