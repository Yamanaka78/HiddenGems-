<div class="relative bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition duration-300">
  <!-- スポット画像 -->
  <% if spot.images.attached? %>
    <div class="mb-4">
      <%= image_tag url_for(spot.images.first), alt: spot.title, class: 'w-full h-48 object-cover rounded-lg' %>
    </div>
  <% else %>
    <div class="mb-4 bg-gray-200 w-full h-48 rounded-lg flex items-center justify-center text-gray-500">
      No Image Available
    </div>
  <% end %>

  <!-- スポット情報 -->
  <h3 class="text-xl font-bold text-gray-800 mb-2"><%= spot.title %></h3>
  <p class="text-gray-600 mb-4"><%= spot.description %></p>

  <!-- 訪問時間と交通手段 -->
  <% plan_spot = @plan.plan_spots.find_by(spot: spot) %>
  <% if plan_spot %>
    <div class="text-gray-700 text-sm mb-2">
      <p>訪問予定時間: <%= plan_spot.visit_time.strftime("%H:%M") if plan_spot.visit_time %></p>
      <p>交通手段: <%= plan_spot.transport_method.presence || "未設定" %></p>
    </div>
  <% end %>

  <!-- 詳細ページリンク -->
  <div class="text-center mt-4">
    <%= link_to '詳細を見る', spot_path(spot), class: "bg-green-500 text-white px-4 py-2 rounded shadow-md hover:bg-green-600 transition" %>
  </div>
</div>
