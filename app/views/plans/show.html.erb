<div class="plan-details bg-gray-50 p-8">
  <!-- ヘッダー -->
  <div class="header mb-6">
    <h1 class="text-3xl font-bold text-gray-800 mb-4"><%= @plan.plan_name %></h1>
    <div class="meta text-gray-600 text-sm">
      <p><span class="font-semibold">作成者:</span> <%= @plan.user.name %></p>
      <p><span class="font-semibold">作成日:</span> <%= @plan.created_at.strftime("%Y年%m月%d日") %></p>
    </div>
  </div>

  <!-- プラン概要 -->
  <div class="bg-white shadow-md rounded-lg p-6 mb-8">
    <h2 class="text-2xl font-semibold text-gray-700 mb-4">プランの詳細</h2>
    <p class="text-gray-700 mb-4"><%= @plan.description.presence || "説明がありません。" %></p>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-sm text-gray-700">
      <div><strong>開始日:</strong> <%= @plan.start_date&.strftime("%Y年%m月%d日") || "未設定" %></div>
      <div><strong>終了日:</strong> <%= @plan.end_date&.strftime("%Y年%m月%d日") || "未設定" %></div>
      <div><strong>予算:</strong> <%= @plan.budget.present? ? "¥#{@plan.budget}" : "未設定" %></div>
      <div><strong>人数:</strong> <%= @plan.number_of_people || "未設定" %> 人</div>
      <div><strong>カテゴリ:</strong> <%= @plan.category.presence || "未分類" %></div>
    </div>
    <% if @plan.weather_link.present? %>
      <div class="mt-4">
        <a href="<%= @plan.weather_link %>" target="_blank" rel="noopener" class="text-blue-500 underline hover:text-blue-700">天気を確認する</a>
      </div>
    <% end %>
  </div>

  <!-- チェックリスト -->
  <% if @plan.checklist.present? %>
    <div class="bg-gray-100 p-6 rounded-lg shadow-md mb-6">
      <h2 class="text-lg font-semibold mb-4 text-gray-800">チェックリスト</h2>
      <ul class="list-disc pl-5 space-y-2 text-gray-700">
        <% @plan.checklist.split("\n").each do |item| %>
          <li><%= item %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- スポットリスト -->
  <h2 class="text-2xl font-semibold text-gray-800 mb-4">訪問スポット</h2>
  <% if @plan.spots.any? %>
    <div class="space-y-6">
      <% @plan.spots.each do |spot| %>
        <%= render 'spot_details', spot: spot %>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500 text-center">訪問予定のスポットがありません。</p>
  <% end %>

  <!-- 戻るボタン -->
  <div class="mt-8 text-center">
    <a href="<%= plans_path %>" class="bg-blue-500 text-white px-6 py-2 rounded-lg shadow hover:bg-blue-600">一覧に戻る</a>
  </div>
</div>
