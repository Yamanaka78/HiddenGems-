<!-- app/views/plans/show.html.erb -->
<div class="container max-w-2xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-center mb-4"><%= @plan.plan_name %></h1>

  <div class="bg-white p-6 rounded-lg shadow-lg mb-6">
    <!-- プラン詳細情報 -->
    <p class="text-gray-700 mb-4"><%= @plan.description %></p>

    <!-- 作成者と作成日 -->
    <div class="flex items-center justify-between text-sm text-gray-600">
      <span>作成者: <%= @plan.user.name %></span>
      <span>作成日: <%= @plan.created_at.strftime("%Y年%m月%d日") %></span>
    </div>
  </div>

  <!-- スポット一覧 -->
  <h2 class="text-2xl font-semibold mb-4">スポット一覧</h2>
  <div class="space-y-4">
    <% @plan.spots.each do |spot| %>
      <div class="bg-gray-100 p-4 rounded-lg shadow-sm">
        <!-- スポットのタイトル -->
        <h3 class="text-xl font-semibold"><%= spot.title %></h3>

        <!-- スポットの最初の画像 -->
        <% if spot.images.attached? %>
          <div class="relative mb-4">
            <%= image_tag url_for(spot.images.first), alt: spot.title, class: 'w-full h-64 object-cover rounded-lg mx-auto' %>
          </div>
        <% end %>

        <!-- スポットの説明 -->
        <p class="text-gray-700"><%= spot.description %></p>

        <!-- 移動時間と交通手段 -->
        <% plan_spot = @plan.plan_spots.find_by(spot: spot) %>
        <% if plan_spot %>
          <div class="text-gray-600 mt-2">
            <p>訪問予定時間: <%= plan_spot.visit_time.strftime("%H:%M") if plan_spot.visit_time %></p>
            <p>交通手段: <%= plan_spot.transport_method.presence || "未設定" %></p>
          </div>
        <% end %>

        <!-- スポット詳細ページへのリンク -->
        <div class="mt-4">
          <%= link_to '詳細を見る', spot_path(spot), class: "text-blue-500 hover:underline" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- 戻るボタン -->
  <div class="mt-6">
    <%= link_to '一覧に戻る', plans_path, class: "text-blue-500 hover:underline" %>
  </div>
</div>
