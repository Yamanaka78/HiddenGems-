<!-- app/views/plans/show.html.erb -->
<div class="container max-w-2xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-center mb-4"><%= @plan.plan_name %></h1>

  <div class="bg-white p-6 rounded-lg shadow-lg mb-6">
    <!-- プラン詳細情報 -->
    <p class="text-gray-700 mb-4"><%= @plan.description %></p>

    <!-- 作成者と作成日 -->
    <div class="flex items-center justify-between text-sm text-gray-600">
      <span>作成者: <%= @plan.user.name %></span>
      <span>作成日: <%= @plan.created_at.strftime("%Y年%m月%d日") %></span>
    </div>
  </div>

  <!-- スポット一覧 -->
  <h2 class="text-2xl font-semibold mb-4">作成プラン</h2>
  <div class="space-y-4">
    <% @plan.spots.each do |spot| %>
      <%= render 'spot_details', spot: spot %>
    <% end %>
  </div>

  <!-- 戻るボタン -->
  <div class="mt-6">
    <%= link_to '一覧に戻る', plans_path, class: "text-blue-500 hover:underline" %>
  </div>
</div>
