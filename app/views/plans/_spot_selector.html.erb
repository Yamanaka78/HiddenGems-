<div class="spot-card border rounded-lg p-4 flex flex-col items-center hover:shadow-md cursor-pointer" data-spot-id="<%= spot.id %>">
  <!-- スポット情報 -->
  <h3 class="text-lg font-bold"><%= spot.spot %></h3>
  <p class="text-gray-500 text-sm"><%= spot.description %></p>

  <!-- hidden チェックボックスで選択状態を保持 -->
  <%= f.check_box :selected_spots, {
    multiple: true,
    class: "hidden spot-checkbox",
    id: "spot-checkbox-#{spot.id}",
    name: "plan[selected_spots][]"
  }, spot.id, nil %>

  <!-- 順序入力 -->
  <label for="order-#{spot.id}" class="text-sm text-gray-700">訪問順序</label>
  <%= f.number_field :order, {
    class: "border rounded px-2 py-1 text-sm w-full",
    id: "order-#{spot.id}",
    name: "plan[order][#{spot.id}]"
  } %>

  <!-- 訪問時間入力 -->
  <label for="visit-time-#{spot.id}" class="text-sm text-gray-700">訪問時間</label>
  <%= f.time_field :visit_times, {
    class: "border rounded px-2 py-1 text-sm w-full",
    id: "visit-time-#{spot.id}",
    name: "plan[visit_times][#{spot.id}]"
  } %>

  <!-- 交通手段選択 -->
  <label for="transport-method-#{spot.id}" class="text-sm text-gray-700">交通手段</label>
  <%= f.select :transport_methods, ["徒歩", "車", "電車", "バス"], { include_blank: "選択してください" }, {
    class: "border rounded px-2 py-1 text-sm w-full",
    id: "transport-method-#{spot.id}",
    name: "plan[transport_methods][#{spot.id}]"
  } %>
</div>
