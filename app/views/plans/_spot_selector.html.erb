<div class="border border-gray-200 rounded p-4">
  <div class="flex items-center mb-2">
    <%= check_box_tag "plan[spot_ids][]", spot.id, false, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
    <%= label_tag "plan[spot_ids][]", spot.title, class: "ml-2 text-gray-700 font-medium" %>
  </div>
  <div class="ml-6 space-y-3">
    <div>
      <label class="block text-gray-700 text-sm mb-1">順番</label>
      <%= number_field_tag "plan[order][#{spot.id}]", nil, min: 1, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div>
      <label class="block text-gray-700 text-sm mb-1">移動時間</label>
      <%= time_field_tag "plan[visit_times][#{spot.id}]", nil, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div>
      <label class="block text-gray-700 text-sm mb-1">移動手段</label>
      <%= text_field_tag "plan[transport_methods][#{spot.id}]", nil, placeholder: "徒歩, 車, 電車 など", class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>
  </div>
</div>
