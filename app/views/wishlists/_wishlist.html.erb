<div class="bg-white rounded-lg shadow-md p-6 flex mb-6">
  <div class="w-2/3">
    <% if wishlist.spot.images.attached? %>
      <div class="flex gap-2 overflow-x-scroll scrollbar-hide h-80">
        <% wishlist.spot.images.each do |image| %>
          <div class="flex-none w-64">
            <%= image_tag image, class: "rounded-lg object-cover h-64 w-full", alt: wishlist.spot.title %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="w-1/2 pl-6 flex flex-col justify-between">
    <div>
      <h3 class="text-2xl font-bold mb-4"><%= wishlist.spot.title %></h3>
      <p class="text-gray-600 mb-2">スポット: <%= wishlist.spot.spot %></p>
      <p class="text-gray-700 mb-6 break-words overflow-hidden">
        <%= truncate(wishlist.spot.description, length: 30) %>
      </p>
      <div class="flex gap-2 mb-4">
        <% wishlist.spot.tags.each do |tag| %>
          <span class="bg-gray-200 text-gray-700 text-sm font-medium px-2 py-1 rounded">
            <%= tag.tag_name %>
          </span>
        <% end %>
      </div>
    </div>

    <div class="mt-6 flex items-center">
      <%= link_to "詳細を見る", spot_path(wishlist.spot), class:"bg-blue-500 text-white py-3 px-5 rounded hover:bg-blue-600 mr-4" %>
    </div>
  </div>
  <!-- Wishlist Button -->
  <div class='ms-auto'>
    <%= render 'wishlist_buttons', { spot: wishlist.spot }%>
  </div>
</div>
